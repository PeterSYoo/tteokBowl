<div class="logo"><a href="/"><img src="https://i.imgur.com/IKfgyk4.png"></a></div>
<div class="build-your-bowl"><a href="#">Build your own bowl now!</a></div>
<div class="profile-cart">

  <div class="profile">
    <div class="profile-dropdown" data-dropdown>
      <button class="link"><img src="https://i.imgur.com/V3j3sKw.png" data-dropdown-button></button>
      <div class="profile-dropdown-login">
        <% if (!currentUser) { %>
        <div class="login-form">
          <form action='/' method='POST'>
            <center>Login</center><br>
            <label for="email">Email:</label>
            <input type="email" name="email" id="email" /><br><br>
            <label for="password">Password:</label>
            <input type="password" name="password" id="password" /><br><br>
            <center><button class="login-button" onclick=""><img src="https://i.imgur.com/63qcJS6.png"></button></center><br>
            <center><a href="/users/new">Don't have an account? Register</a></center>
          </form>
        </div>
        <% } else { %>
          <div class="logged-in">
            <p>You are already logged in!</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  <div class="favorites"><a href="#"><img src="https://i.imgur.com/a3vdSq8.png"></a></div>
  <div class="cart">
    <a href="#"><img src="https://i.imgur.com/c71OI2k.png"></a>
  </div>
  <% if (currentUser) { %>
    <div class="logout">
        <a href="/sessions?_method=DELETE"><img src="https://i.imgur.com/ukZRHOp.png"></a>
    </div>
  <% } else { %>
    <div class="sign-up">
      <a href="/users/new"><img src="https://i.imgur.com/1BkSdTS.png"></a>
    </div>
  <% } %>
</div>