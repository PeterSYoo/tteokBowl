          <div class="toppings">
            <div class="toppings-left">

            <input type="checkbox" id="rice-cakes" value="Rice-cakes" name="toppings"><label for="rice-cakes"><font class="tab">Rice cakes</font></label><br>
            <input class="tab" type="checkbox" id="rice-cakes-extra" value="Rice-cakes" name="toppings"><label for="rice-cakes-extra"><font class="tab">Extra</font></label><br>

            <input type="checkbox" id="ramen-noodles" value="Ramen-noodles" name="toppings"><label for="ramen-noodles"><font class="tab">Ramen noodles</font></label><br>
            <input class="tab" type="checkbox" id="ramen-noodles-extra" value="Ramen-noodles" name="toppings"><label for="ramen-noodles-extra"><font class="tab">Extra</font></label><br>
            
            <input type="checkbox" id="udon-noodles" value="Udon-noodles" name="toppings"><label for="udon-noodles"><font class="tab">Udon noodles</font></label><br>
            <input class="tab" type="checkbox" id="udon-noodles-extra" value="Udon-noodles" name="toppings"><label for="udon-noodles-extra"><font class="tab">Extra</font></label><br>

            <input type="checkbox" id="fish-cakes" value="Fish-cakes" name="toppings"><label for="fish-cakes"><font class="tab">Fish cakes</font></label><br>
            <input class="tab" type="checkbox" id="fish-cakes-extra" value="Fish-cakes" name="toppings"><label for="fish-cakes-extra"><font class="tab">Extra</font></label><br>

            <input type="checkbox" id="eggs" value="Eggs" name="toppings"><label for="eggs"><font class="tab">Eggs</font></label><br>
            <input class="tab" type="checkbox" id="eggs-extra" value="Eggs" name="toppings"><label for="eggs-extra"><font class="tab">Extra</font></label><br>

            <input type="checkbox" id="mozz-cheese" value="Mozz-cheese" name="toppings"><label for="mozz-cheese"><font class="tab">Mozzarella Cheese</font></label><br>
            <input class="tab" type="checkbox" id="mozz-cheese-extra" value="Mozz-cheese" name="toppings"><label for="mozz-cheese-extra"><font class="tab">Extra</font></label><br>

            <input type="checkbox" id="mini-sausages" value="Mini-sausages" name="toppings"><label for="mini-sausages"><font class="tab">Mini sausages</font></label><br>
            <input class="tab" type="checkbox" id="mini-sausages-extra" value="Mini-sausages" name="toppings"><label for="mini-sausages-extra"><font class="tab">Extra</font></label><br>

            <input type="checkbox" id="spam" value="Spam" name="toppings"><label for="spam"><font class="tab">Spam</font></label><br>
            <input class="tab" type="checkbox" id="spam-extra" value="Spam" name="toppings"><label for="spam-extra"><font class="tab">Extra</font></label><br>

